.background {
    flex-grow: 1;
    background-color: var(--app-background-color);
}

.header-text {
    font-size: 127px;
    -unity-text-align: middle-center;
    margin-top: 24px;
}

.status-bar {
    height: 200px;
    align-items: stretch;
    flex-direction: row;
    justify-content: space-between;
    background-color: var(--status-bar-background-color);
    flex-grow: 1;
    padding-right: 70px;
    padding-left: 70px;
}

.status-bar__icons {
    background-color: var(--text-color);
    width: 30px;
    height: 30px;
    border-radius: 70px;
    margin-left: 15px;
    align-self: center;
}

.status-bar__icons-highlighted {
    background-color: var(--highlight-color-2);
}

.text {
    color: var(--text-color);
    -unity-font-style: bold;
    -unity-text-align: middle-center;
    font-size: 34px;
}

.tag {
    background-color: rgb(253, 151, 129);
    border-radius: 22px;
}

.tag__text {
    margin-top: 4px;
    margin-right: 12px;
    margin-bottom: 4px;
    margin-left: 12px;
    color: rgb(7, 6, 24);
}

.article-summary-text {
    font-size: 28px;
    -unity-text-align: upper-left;
    white-space: normal;
}

.button {
    background-color: var(--button-color);
    color: var(--button-text-color);
    -unity-font-style: bold;
    font-size: 30px;
    border-radius: 40px;
    height: 80px;
    width: 100%;
    justify-content: center;
    -unity-text-align: middle-center;
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    border-left-width: 0;
    border-right-width: 0;
    border-top-width: 0;
    border-bottom-width: 0;
}

.button:hover {
    background-color: var(--button-color-hover);
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    border-left-width: 0;
    border-right-width: 0;
    border-top-width: 0;
    border-bottom-width: 0;
}

.button:active {
    background-color: var(--button-color-hover);
}

.button-margins {
    margin-top: 10px;
    margin-bottom: 10px;
}

.button-last {
    margin-top: auto;
}

.overlay {
    background-color: var(--highlight-color-1);
    border-left-color: rgb(15, 11, 27);
    border-right-color: rgb(15, 11, 27);
    border-top-color: rgb(15, 11, 27);
    border-bottom-color: rgb(15, 11, 27);
    border-top-width: 12px;
    border-right-width: 12px;
    border-bottom-width: 12px;
    border-left-width: 12px;
    width: 130px;
    height: 130px;
    border-radius: 90px;
    position: absolute;
}

.overlay:hover {
    border-left-color: var(--highlight-color-2);
    border-right-color: var(--highlight-color-2);
    border-top-color: var(--highlight-color-2);
    border-bottom-color: var(--highlight-color-2);
    width: 130px;
    height: 130px;
    border-radius: 90px;
    position: absolute;
}

.tile {
    align-items: center;
    max-width: 350px;
    flex-grow: 1;
}

.tile__text {
    -unity-text-align: middle-center;
    font-size: 32px;
    -unity-font-style: bold;
    white-space: normal;
    width: 80%;
}

.tile__image {
    background-color: var(--tile-background-color);
    border-radius: 65px;
    -unity-background-image-tint-color: var(--tile-image-tint);
    -unity-background-scale-mode: scale-and-crop;
    -unity-slice-scale: 0.2px;
    flex-shrink: 0;
    flex-grow: 0;
    width: 250px;
    height: 250px;
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    border-left-width: 0;
    border-right-width: 0;
    border-top-width: 0;
    border-bottom-width: 0;
}

.tile__image:hover {
    background-color: var(--tile-background-cover-hover);
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    border-left-width: 0;
    border-right-width: 0;
    border-top-width: 0;
    border-bottom-width: 0;
}

.tile__image:active {
    background-color: var(--tile-background-cover-hover);
}

.tile-scroll-view {
    min-width: 110%;
    flex-direction: row;
    margin-bottom: 60px;
    justify-content: space-between;
}

.tile-container {
    margin-bottom: 100px;
    margin-top: 100px;
    background-color: rgba(49, 49, 78, 0.68);
    padding-top: 50px;
    padding-bottom: 50px;
    border-top-left-radius: 50px;
    border-top-right-radius: 50px;
    border-bottom-right-radius: 50px;
    border-bottom-left-radius: 50px;
    padding-right: 50px;
    padding-left: 50px;
}

.header-text {
    font-size: 127px;
    -unity-text-align: middle-center;
    margin-top: 24px;
}

.unity-scroll-view__content-container--horizontal {
    transition-duration: 0.2s;
    transition-property: translate;
    transition-timing-function: ease-out-circ;
    flex-grow: 1;
    min-height: 100%;
}

.unity-scroller--horizontal > .unity-scroller__low-button {
    display: none;
}

.unity-scroller--horizontal > .unity-scroller__high-button {
    display: none;
}

.unity-scroller--horizontal .unity-base-slider__tracker {
    background-color: var(--scroller-background-color);
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    border-radius: 15px;
}

.unity-scroller--horizontal .unity-base-slider__dragger {
    border-radius: 8px;
    margin: 0 4px;
    padding: 0;
}

.unity-scroll-view__horizontal-scroller {
    width: 372px;
    align-self: center;
}

.menu {
    flex-grow: 1;
    height: 100%;
    width: 60%;
    align-items: stretch;
    background-color: var(--menu-background-color);
    justify-content: flex-start;
    border-radius: 40px;
    padding: 20px;
    padding-right: 30px;
    padding-left: 30px;
    max-width: 650px;
}

.menu-container {
}

.menu-container-hidden {
    opacity: 0;
    translate: 100% 0;
}

.image-tint {
    -unity-background-image-tint-color: var(--image-tint);
}

.horizontal-scroll-elements {
    min-width: 100%;
    min-height: 877px;
    -unity-background-scale-mode: scale-to-fit;
}

.article {
    width: 48%;
}

.article-container {
    min-height: 500px;
    flex-direction: row;
    align-items: stretch;
    max-height: 800px;
    justify-content: space-between;
    margin-top: 30px;
    margin-bottom: 30px;
}
